<div class="tab-pane fade" id="passageiros" role="tabpanel" aria-labelledby="passageiros-tab">

    {% if e.id %}
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h5>Passageiros</h5>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-primary" title="Adicionar passageiro"
                                onclick="window.location.href='{{ url('viagem_passageiro_form', {'viagem': e.id} ) }}'">
                            <i class="fas fa-user-plus"></i> Adicionar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                <div class="table-responsive-sm">
                    <table class="table table-striped table-hover">

                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nome</th>
                            <th scope="col">CPF</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for passageiro in e.passageiros %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ passageiro.nome }}</td>
                                <td><span class="cpf">{{ passageiro.cpf }}</span></td>
                                <td class="text-right">
                                        <button type="button" class="btn btn-sm btn-primary"
                                                onclick="window.location.href='{{ url('viagem_passageiro_form', {'viagem': e.id, 'passageiro': passageiro.id} ) }}'">
                                            <i class="fas fa-wrench" aria-hidden="true"></i>
                                        </button>

                                        <button type="button" class="btn btn-sm btn-danger"
                                                data-url="{{ url('viagem_passageiro_delete', {'passageiro': passageiro.id}) }}"
                                                data-token="{{ csrf_token('delete') }}"
                                                data-target="#confirmationModal" data-toggle="modal">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>


            </div>
        </div>
    {% endif %}

</div>
